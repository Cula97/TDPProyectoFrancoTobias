<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/topBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:elevation="3dp"
		android:background="@android:color/white">

		<android.support.v7.widget.SearchView
			android:id="@+id/locationSearchView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toStartOf="@+id/lineSpinner">
		</android.support.v7.widget.SearchView>

		<Spinner
			android:id="@+id/lineSpinner"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true">
		</Spinner>
	</RelativeLayout>

	<fragment
		android:id="@+id/mapFragment"
		android:name="com.google.android.gms.maps.SupportMapFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	</fragment>

	<RelativeLayout
		android:id="@+id/bottomBarLayout"
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:elevation="3dp"
		android:background="@android:color/white">

		<TextView
			android:id="@+id/textViewBottomBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:paddingBottom="5dp"
			android:text="@string/addEndLocation" />

		<Button
			android:id="@+id/newLocationButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/textViewBottomBar"
			android:layout_alignParentStart="true"
			android:text="@string/newLocation" />

		<Button
			android:id="@+id/currentLocationButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/textViewBottomBar"
			android:layout_alignParentEnd="true"
			android:text="@string/currentLocation"
			android:onClick="onCurrentLocationClick"/>

	</RelativeLayout>

</RelativeLayout>
