<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/map_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<fragment xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/map"
		android:name="com.google.android.gms.maps.SupportMapFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".DataVisualizer.VisualizeDataMapActivity" />

	<Button
		android:id="@+id/buttonSection"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:elevation="0dp"
		android:onClick="displaySection"
		android:text="Tramo"
		android:visibility="gone"
		app:layout_constraintBaseline_toBaselineOf="@+id/buttonStop"
		app:layout_constraintEnd_toEndOf="parent" />

	<Button
		android:id="@+id/buttonStop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginStart="16dp"
		android:onClick="displayStop"
		android:text="Parada"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<CheckBox
		android:id="@+id/checkBoxSectionsGo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:layout_marginTop="4dp"
		android:checked="true"
		android:layoutDirection="rtl"
		android:text="Ruta Ida"
		android:textAlignment="viewEnd"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<CheckBox
		android:id="@+id/checkBoxSectionsReturn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:layout_marginTop="4dp"
		android:checked="false"
		android:layoutDirection="rtl"
		android:text="Ruta Vuelta"
		android:textAlignment="viewEnd"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/checkBoxSectionsGo" />

</android.support.constraint.ConstraintLayout>